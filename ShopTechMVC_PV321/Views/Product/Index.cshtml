<table class="table table-striped table-hover">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model){
            <tr>
                <th scope="row">@product.Id</th>
                    <td><img style="width: 100px" src="@(product.ImagePath??"./images/NoImage.jpg")" /></td>
                    <td>@product.Title</td>
                    <td>@product.CategoryName</td>
                    <td>@product.Description</td>
                    <td>@product.Price грн.</td>
                    @* \~/Product/Detail/1 *@
                    @* <td><a href="~/Product/Details/@product.Id">Info</a></td> *@
                    <td>
                     <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Info</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    </td>
            </tr>
            }
        </tbody>
    </table>
</table>