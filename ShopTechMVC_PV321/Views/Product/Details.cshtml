@* @model DataAccess.Models.Product *@
@model Product

@if(Model!=null){
<div class="card" style="width: 18rem;">
    <div class="card-header">
        @Model.Title
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Description</li>
        <li class="list-group-item">@Model.Price грн.</li>
    </ul>
    </div>
    @if (ViewBag.ReturnUri == null)
    {
        <a asp-controller="Product" asp-action="Index">Назад</a>
    }
    else
    {
        <a href="@ViewBag.ReturnUri">Назад</a>
        
    }


}
else
{
    
<h3>Product is not found... </h3>}
